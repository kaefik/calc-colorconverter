<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.kaefik.isaifutdinov.calc_colorconverter.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextX"
        android:allowUndo="false"
        android:hint="Введите Х"
        android:digits="-0123456789."
        android:layout_below="@+id/textViewZ"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextY"
        android:hint="Введите Y"
        android:digits="-0123456789."
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textViewZ"
        android:layout_above="@+id/buttonCalc"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_below="@+id/textViewZ"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вычислить"
        android:id="@+id/buttonCalc"
        android:textSize="25dp"
        android:onClick="onRunCalc"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewZ"
        android:textSize="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

</RelativeLayout>
